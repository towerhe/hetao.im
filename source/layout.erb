<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv='X-UA-Compatible' content='IE=edge;chrome=1' />
    <title>HETAO.IM - <%= data.page.title %></title>
    <%= stylesheet_link_tag "ember" %>
    <%= stylesheet_link_tag "highlight" %>
    <%= stylesheet_link_tag "site" %>
  </head>
  <body>
    <div id="header">
      <div id="wrapper">
        <a id="logo" href="/">HETAO.IM</a>
        <div id="sns">
          <a href="http://weibo.com/towerhe">新浪微博</a>
          <a href="https://twitter.com/towerhe">Twitter</a>
          <a href="https://github.com/towerhe">Github</a>
        </div>
      </div>
    </div>

    <div id="content-wrapper">
      <% sidebar = rendered_partial_for(:sidebar) || yield_content(:sidebar) %>
      <% if sidebar %>
        <div id="sidebar">
          <%= sidebar %>
          <div id="back-to-top"><a href="#">&#11014; Back to Top</a></div>
        </div>
      <% end %>
      <div id="content" <% if sidebar %>class="has-sidebar"<% end %>>
        <%= yield %>
      </div>
    </div> 

    <div id="footer">
      <div class="info">
        <div class="copyright">Copyright 2010-2012 HETAO.IM</div>
      </div>
    </div>

    <script type="text/javascript">
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-6183006-4']);
      _gaq.push(['_trackPageview']);

      (function() {
       var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
       ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
       var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
       })();
</script>
  </body>
</html>
